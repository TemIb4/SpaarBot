# SpaarBot Production Configuration
# Copy this file to .env.production and update values

# Database
POSTGRES_DB=spaarbot_prod
POSTGRES_USER=spaarbot
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
DATABASE_URL=postgresql+asyncpg://spaarbot:CHANGE_THIS_STRONG_PASSWORD_123@postgres:5432/spaarbot_prod

# Redis Cache
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456@redis:6379/0

# Application
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_789
ENVIRONMENT=production
DEBUG=false

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Groq AI
GROQ_API_KEY=your_groq_api_key

# PayPal (Production)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
